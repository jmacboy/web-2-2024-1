<%- include('../components/header.ejs') %>
    <div class="container">

        <div class="row mt-2">
            <div class="col-12">
                <h3>Formulario de foto de perfil</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-12">

                <form method="post" action="/personas/<%=persona.id%>/foto"
                    enctype="multipart/form-data">
                    <div class="mb-2">
                        <label for="foto">Foto de perfil</label>
                        <input class="form-control" type="file" name="foto" />
                    </div>
                    <div class="mb-2">
                        <input class="btn btn-primary" type="submit" value="Subir foto de perfil" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include('../components/footer.ejs') %>