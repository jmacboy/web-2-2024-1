<%- include('../components/header.ejs') %>
    <div class="container">
        <div class="row mt-2">
            <div class="col-12">
                <h3>Lista de mascotas</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Dueño</th>
                            <th>Tipo</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% mascotas.forEach(mascota=> { %>
                            <tr>
                                <td>
                                    <%= mascota.id %>
                                </td>
                                <td>
                                    <%= mascota.nombre %>
                                </td>
                                <td>
                                    <%= mascota.persona.nombre %> <%= mascota.persona.apellido %>
                                </td>
                                <td>
                                    <%= mascota.tipo %>
                                </td>
                                <td>
                                    <a href="/mascotas/<%=mascota.id%>/edit" class="btn btn-primary">Editar</a>
                                </td>
                                <td>
                                    <form method="post" action="/mascotas/<%=mascota.id%>/delete"
                                        onsubmit="return confirm('Está seguro?')">
                                        <input class="btn btn-danger" type="submit" value="Eliminar" />
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('../components/footer.ejs') %>